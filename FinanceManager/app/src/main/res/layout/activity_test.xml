<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Input Email -->

    <EditText
        android:id="@+id/emailInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập email để tìm kiếm"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="8dp" />

    <!-- Nút Tìm kiếm -->
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Mật khẩu bạn muốn so sánh" />

    <Button
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tìm kiếm"
        android:layout_marginBottom="16dp" />

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ID -->
            <TextView
                android:id="@+id/tvIdLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID:"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:padding="4dp" />

            <!-- Username -->
            <TextView
                android:id="@+id/tvUsernameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username:"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="example_user"
                android:padding="4dp" />

            <!-- Email -->
            <TextView
                android:id="@+id/tvEmailLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="example@gmail.com"
                android:padding="4dp" />

            <!-- Name -->
            <TextView
                android:id="@+id/tvNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nguyễn Văn A"
                android:padding="4dp" />

            <!-- Password -->
            <TextView
                android:id="@+id/tvPasswordLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password:"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="********"
                android:padding="4dp" />

            <!-- Create At -->
            <TextView
                android:id="@+id/tvCreateAtLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Created At:"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvCreateAt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2024-11-15 10:00:00"
                android:padding="4dp" />

            <!-- Last Login -->
            <TextView
                android:id="@+id/tvLastLoginLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Login:"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvLastLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2024-11-15 12:00:00"
                android:padding="4dp" />
            <TextView
                android:id="@+id/tvKQcheckPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đúng/Sai"
                android:padding="4dp" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
